    }
}

.return-status {
    display: inline-block;
}

.return-status .badge {
    font-size: 0.9rem;
    padding: 0.5em 1em;
}

.btn-outline-warning {
    color: #ffc107;
    border-color: #ffc107;
}

.btn-outline-warning:hover {
    color: #000;
    background-color: #ffc107;
    border-color: #ffc107;
}

.modal-content {
    border-radius: 12px;
}

.modal-header {
    border-bottom: 1px solid #dee2e6;
    background-color: #f8f9fa;
    border-radius: 12px 12px 0 0;
}

.modal-footer {
    border-top: 1px solid #dee2e6;
    background-color: #f8f9fa;
    border-radius: 0 0 12px 12px;
}
</style>

<script>

function viewOrderDetails(orderId) {
    console.log('Viewing order details for:', orderId); // Debug log
    window.location.href = `/orders/${orderId}/details`;  // Updated to match your route
}
</script>

function cancelOrder(orderId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, cancel it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/orders/${orderId}/cancel`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ updateStock: true })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire(
                        'Cancelled!',
                        'Your order has been cancelled',
                        'success'
                    ).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire(
                        'Error!',
                        data.message || 'Error cancelling order',
                        'error'
                    );
                }
            })
            .catch(error => {
                console.error('Error cancelling order:', error);
                Swal.fire(
                    'Error!',
                    'Error cancelling order',
                    'error'
                );
            });
        }
    });
}

let currentOrderId = null;

function initiateReturn(orderId) {
    currentOrderId = orderId;
    const returnModal = new bootstrap.Modal(document.getElementById('returnModal'));
    returnModal.show();
}

function submitReturn() {
    const reason = document.getElementById('returnReason').value;
    if (!reason) {
        Swal.fire('Error', 'Please provide a reason for return', 'error');
        return;
    }

    fetch(`/orders/${currentOrderId}/return`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ returnReason: reason })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                title: 'Success!',
                text: 'Return request submitted successfully',
                icon: 'success'
            }).then(() => {
                location.reload();
            });
        } else {
            Swal.fire('Error', data.message, 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire('Error', 'Failed to submit return request', 'error');
    });

    // Close the modal
    const returnModal = bootstrap.Modal.getInstance(document.getElementById('returnModal'));
    returnModal.hide();
}

// Add AOS initialization if you're using it
document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
        duration: 800,
        offset: 50
    });
});
</script>

