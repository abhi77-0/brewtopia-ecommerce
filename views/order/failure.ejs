<%- include('../partials/header') %>

<div class="container text-center py-5">
    <div class="failure-animation mb-4">
        <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
    </div>
    <h1 class="mb-4">Payment Failed</h1>
    <p class="lead mb-4">We're sorry, but there was an issue processing your payment.</p>
    
    <div class="d-flex justify-content-center gap-3">
        <button onclick="retryPayment()" class="btn btn-primary">Retry Payment</button>
        <a href="/orders" class="btn btn-outline-primary">View Order Details</a>
    </div>
</div>

<script>
function retryPayment() {
    window.location.href = '/cart/checkout';
}
</script>

