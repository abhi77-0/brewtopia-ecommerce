<%- include('../partials/header') %>

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">Available Coupons</h2>
                    <p class="text-muted small">Apply these coupons to get amazing discounts</p>
                </div>
                <a href="/users/profile" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Profile
                </a>
            </div>
            
            <div class="ticket-container">
                <% if (coupons && coupons.length > 0) { %>
                    <div class="row g-3">
                        <% coupons.forEach(function(coupon) { %>
                            <% 
                            const userId = user && user._id ? user._id.toString() : '';
                            const userUsageCount = coupon.usedBy ? coupon.usedBy.filter(usage => 
                                usage.userId && usage.userId.toString() === userId
                            ).length : 0;
                            const hasReachedLimit = coupon.usageLimit && coupon.usedCount >= coupon.usageLimit;
                            const hasReachedUserLimit = userUsageCount >= (coupon.perUserLimit || 1);
                            const isDisabled = hasReachedLimit || hasReachedUserLimit;
                            %>
                            <div class="col-md-6 col-lg-4">
                                <div class="ticket <%= isDisabled ? 'disabled' : '' %>">
                                    <div class="ticket-content">
                                        <div class="ticket-header">
                                            <div class="ticket-discount">
                                                <% if (coupon.discountType === 'percentage') { %>
                                                    <span class="discount-amount"><%= coupon.discountAmount %>%</span>
                                                <% } else { %>
                                                    <span class="discount-amount">₹<%= coupon.discountAmount %></span>
                                                <% } %>
                                                <span class="discount-text">OFF</span>
                                            </div>
                                            <div class="ticket-code">
                                                <span><%= coupon.code.toUpperCase() %></span>
                                            </div>
                                        </div>
                                        
                                        <div class="ticket-body">
                                            <h5 class="ticket-title"><%= coupon.name %></h5>
                                            
                                            <div class="ticket-meta">
                                                <% if (coupon.minimumPurchase > 0) { %>
                                                    <div class="meta-item">
                                                        <i class="fas fa-tag"></i>
                                                        <span>Min. ₹<%= coupon.minimumPurchase %></span>
                                                    </div>
                                                <% } %>
                                                
                                                <% if (coupon.maxDiscount > 0 && coupon.discountType === 'percentage') { %>
                                                    <div class="meta-item">
                                                        <i class="fas fa-hand-holding-usd"></i>
                                                        <span>Max ₹<%= coupon.maxDiscount %></span>
                                                    </div>
                                                <% } %>
                                                
                                                <div class="meta-item">
                                                    <i class="far fa-calendar-alt"></i>
                                                    <span>
                                                        <% 
                                                        let expiryDate;
                                                        try {
                                                            expiryDate = new Date(coupon.endDate || coupon.expiryDate).toLocaleDateString('en-US', { 
                                                                day: 'numeric', 
                                                                month: 'short', 
                                                                year: 'numeric' 
                                                            });
                                                        } catch (e) {
                                                            expiryDate = 'N/A';
                                                        }
                                                        %>
                                                        Valid till <%= expiryDate %>
                                                    </span>
                                                </div>
                                            </div>
                                            
                                            <% if (coupon.usageLimit) { %>
                                                <div class="ticket-usage">
                                                    <div class="usage-item">
                                                        <span class="usage-label">Usage</span>
                                                        <div class="usage-progress">
                                                            <div class="progress-bar" style="width: <%= (coupon.usedCount || 0) / coupon.usageLimit * 100 %>%"></div>
                                                        </div>
                                                        <span class="usage-value"><%= coupon.usedCount || 0 %>/<%= coupon.usageLimit %></span>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        <button class="btn btn-apply" 
                                                onclick="applyCoupon('<%= coupon.code %>')"
                                                <%= isDisabled ? 'disabled' : '' %>>
                                            <%= isDisabled ? 
                                                (hasReachedLimit ? 'Fully Redeemed' : 'Usage Limit Reached') : 
                                                'Apply Coupon' %>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <% if (pagination && pagination.totalPages > 1) { %>
                        <div class="pagination-container mt-4">
                            <nav aria-label="Coupon pagination">
                                <ul class="pagination justify-content-center">
                                    <% if (pagination.hasPrevPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= pagination.prevPage %>&limit=<%= pagination.limit %>" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                    <% } else { %>
                                        <li class="page-item disabled">
                                            <span class="page-link" aria-hidden="true">&laquo;</span>
                                        </li>
                                    <% } %>

                                    <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                        <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                                        </li>
                                    <% } %>

                                    <% if (pagination.hasNextPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= pagination.nextPage %>&limit=<%= pagination.limit %>" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    <% } else { %>
                                        <li class="page-item disabled">
                                            <span class="page-link" aria-hidden="true">&raquo;</span>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="no-coupons">
                        <div class="no-coupons-icon">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                        <h4>No Coupons Available</h4>
                        <p class="text-muted">Check back later for exciting offers!</p>
                        <a href="/shop" class="btn btn-primary">Continue Shopping</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<style>
    .ticket {
        background: #fff;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        border: 1px solid #e0e0e0;
    }
    
    .ticket::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(255, 152, 0, 0.05), rgba(245, 124, 0, 0.05));
        z-index: 0;
    }
    
    .ticket:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
    }
    
    .ticket.disabled {
        opacity: 0.7;
        pointer-events: none;
    }
    
    .ticket-content {
        position: relative;
        z-index: 2;
        padding: 0.75rem;
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    
    .ticket-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px dashed #e0e0e0;
    }
    
    .ticket-discount {
        background: linear-gradient(135deg, #FF9800, #F57C00);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        text-align: center;
    }
    
    .discount-amount {
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1;
        display: block;
    }
    
    .discount-text {
        font-size: 0.7rem;
        font-weight: 500;
        opacity: 0.9;
    }
    
    .ticket-code {
        background: #f8f9fa;
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        font-family: monospace;
        font-weight: 600;
        letter-spacing: 1px;
        font-size: 0.85rem;
    }
    
    .ticket-body {
        flex: 1;
    }
    
    .ticket-title {
        font-size: 0.95rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.75rem;
    }
    
    .ticket-meta {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        margin-bottom: 0.75rem;
    }
    
    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.75rem;
        color: #666;
    }
    
    .meta-item i {
        color: #FF9800;
        width: 14px;
        text-align: center;
    }
    
    .ticket-usage {
        margin-top: auto;
        margin-bottom: 0.75rem;
    }
    
    .usage-item {
        margin-bottom: 0.4rem;
    }
    
    .usage-label {
        font-size: 0.7rem;
        color: #666;
        display: block;
        margin-bottom: 0.2rem;
    }
    
    .usage-progress {
        height: 2px;
        background: #f0f0f0;
        border-radius: 1px;
        overflow: hidden;
        margin-bottom: 0.2rem;
    }
    
    .progress-bar {
        background: linear-gradient(90deg, #FF9800, #F57C00);
        height: 100%;
        transition: width 0.3s ease;
    }
    
    .usage-value {
        font-size: 0.65rem;
        color: #666;
    }
    
    .btn-apply {
        background: linear-gradient(135deg, #FF9800, #F57C00);
        color: white;
        border: none;
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        font-weight: 500;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        width: 100%;
    }
    
    .btn-apply:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 6px rgba(255, 152, 0, 0.2);
    }
    
    .btn-apply:disabled {
        background: #e0e0e0;
        color: #9e9e9e;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }
    
    .no-coupons {
        text-align: center;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 6px;
    }
    
    .no-coupons-icon {
        font-size: 2.5rem;
        color: #ddd;
        margin-bottom: 1rem;
    }
    
    @media (max-width: 768px) {
        .ticket-content {
            padding: 0.6rem;
        }
        
        .discount-amount {
            font-size: 1.1rem;
        }
        
        .ticket-code {
            font-size: 0.8rem;
        }
    }

    .pagination-container {
        margin-top: 2rem;
    }

    .pagination {
        gap: 0.25rem;
    }

    .page-link {
        color: #FF9800;
        border: 1px solid #FF9800;
        padding: 0.5rem 0.75rem;
        transition: all 0.3s ease;
    }

    .page-link:hover {
        background-color: #FF9800;
        color: white;
        border-color: #FF9800;
    }

    .page-item.active .page-link {
        background-color: #FF9800;
        border-color: #FF9800;
        color: white;
    }

    .page-item.disabled .page-link {
        color: #6c757d;
        border-color: #dee2e6;
        background-color: #fff;
    }

    @media (max-width: 768px) {
        .pagination {
            flex-wrap: wrap;
            justify-content: center;
        }
        
        .page-link {
            padding: 0.4rem 0.6rem;
            font-size: 0.9rem;
        }
    }
</style>

<script>
    function applyCoupon(code) {
        window.location.href = `/cart?coupon=${code}`;
    }
</script>

<%- include('../partials/footer') %> 