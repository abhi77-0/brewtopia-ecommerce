<%- include('../partials/profile-header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Page Title -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Edit Profile</h2>
                <a href="/users/profile" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>

            <!-- Edit Profile Form -->
            <div class="edit-form-card">
                <form action="/users/profile/update" method="POST">
                    <div class="form-floating mb-4">
                        <input type="text" 
                               class="form-control" 
                               id="nameInput"
                               name="name" 
                               value="<%= user.name || '' %>" 
                               placeholder="Enter your full name">
                        <label for="nameInput">Full Name</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="email" 
                               class="form-control <%= user.googleId ? 'google-auth' : '' %>" 
                               id="emailInput"
                               name="email"
                               value="<%= user.email %>" 
                               placeholder="Email"
                               <%= user.googleId ? 'readonly' : '' %>>
                        <label for="emailInput">Email</label>
                        <% if (user.googleId) { %>
                            <div class="google-badge">
                                <i class="fab fa-google"></i> Google Account
                            </div>
                            <small class="text-muted">Email cannot be changed for Google-linked accounts</small>
                        <% } %>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="tel" 
                               class="form-control" 
                               id="phoneInput"
                               name="phone" 
                               value="<%= user.phone || '' %>" 
                               placeholder="Enter your phone number">
                        <label for="phoneInput">Phone Number</label>
                    </div>

                    <button type="submit" class="btn btn-save w-100">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .edit-form-card {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .form-floating > .form-control {
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        height: calc(3.5rem + 2px);
        padding: 1rem 1rem;
    }

    .form-floating > .form-control:focus {
        border-color: #FF9800;
        box-shadow: 0 0 0 0.2rem rgba(255, 152, 0, 0.15);
    }

    .form-control.google-auth {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    .google-badge {
        display: inline-flex;
        align-items: center;
        background: #f1f5f9;
        color: #475569;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    .google-badge i {
        color: #4285F4;
        margin-right: 0.5rem;
    }

    .form-floating > label {
        padding: 1rem;
        color: #64748b;
    }

    .btn-back {
        background-color: #f1f5f9;
        color: #475569;
        border: none;
        padding: 0.625rem 1.25rem;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background-color: #e2e8f0;
        color: #1e293b;
        transform: translateY(-2px);
    }

    .btn-save {
        background-color: #FF9800;
        color: white;
        border: none;
        padding: 1rem;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .btn-save:hover {
        background-color: #F57C00;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 152, 0, 0.2);
    }

    .text-muted {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        margin-left: 0.5rem;
        display: block;
    }

    h2 {
        color: #1e293b;
    }

    @media (max-width: 768px) {
        .edit-form-card {
            padding: 1.5rem;
        }

        .d-flex {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start !important;
        }

        .btn-back {
            width: 100%;
        }
    }
</style>

<%- include('../partials/footer') %> 