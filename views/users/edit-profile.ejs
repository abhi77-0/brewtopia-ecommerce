<div class="edit-profile-container">
    <h1>Edit Profile</h1>
    
    <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/users/update-profile" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" 
                   class="form-control" 
                   id="name" 
                   name="name" 
                   value="<%= user.name %>" 
                   required>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" 
                   class="form-control" 
                   id="email" 
                   name="email" 
                   value="<%= user.email %>" 
                   readonly>
        </div>

        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" 
                   class="form-control" 
                   id="phone" 
                   name="phone" 
                   value="<%= user.phone || '' %>">
        </div>

        <!-- Add any other fields you want to make editable -->

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/users/profile" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .edit-profile-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 20px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 0.375rem 0.75rem;
    }
</style> 