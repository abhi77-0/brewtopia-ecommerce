<%- include('../partials/profile-header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Page Title -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Edit Profile</h2>
                <a href="/users/profile" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>

            <!-- Edit Profile Form -->
            <div class="edit-form-card mb-4">
                <form action="/users/profile/update" method="POST" id="editProfileForm" novalidate>
                    <div class="form-floating mb-4">
                        <input type="text" 
                               class="form-control" 
                               id="nameInput"
                               name="name" 
                               value="<%= user.name || '' %>" 
                               placeholder="Enter your full name"
                               required
                               minlength="2">
                        <label for="nameInput">Full Name</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="email" 
                               class="form-control <%= user.googleId ? 'google-auth' : '' %>" 
                               id="emailInput"
                               name="email"
                               value="<%= user.email %>" 
                               placeholder="Email"
                               <%= user.googleId ? 'readonly' : '' %>
                               required>
                        <label for="emailInput">Email</label>
                        
                        <div class="email-warning-message" id="emailWarning">
                            <div class="warning-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>This email is already registered</span>
                            </div>
                        </div>

                        <% if (user.googleId) { %>
                            <div class="google-badge">
                                <i class="fab fa-google"></i> Google Account
                            </div>
                            <small class="text-muted">Email cannot be changed for Google-linked accounts</small>
                        <% } %>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="tel" 
                               class="form-control" 
                               id="phoneInput"
                               name="phone" 
                               value="<%= user.phone || '' %>" 
                               placeholder="Enter your phone number"
                               required>
                        <label for="phoneInput">Phone Number</label>
                        
                        <div class="phone-warning-message" id="phoneWarning">
                            <div class="warning-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>Please enter a valid 10-digit phone number</span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-save w-100" id="submitBtn">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </form>
            </div>

            <!-- Change Password Section (Only for non-Google users) -->
            <% if (!user.googleId) { %>
            <div class="edit-form-card">
                <h3 class="mb-4">Change Password</h3>
                <form id="changePasswordForm" novalidate>
                    <div class="form-floating mb-4">
                        <input type="password" 
                               class="form-control" 
                               id="currentPassword"
                               name="currentPassword" 
                               placeholder="Current Password"
                               required>
                        <label for="currentPassword">Current Password</label>
                        <div class="password-warning-message" id="currentPasswordWarning">
                            <div class="warning-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>Current password is required</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="password" 
                               class="form-control" 
                               id="newPassword"
                               name="newPassword" 
                               placeholder="New Password"
                               required
                               minlength="6">
                        <label for="newPassword">New Password</label>
                        <div class="password-warning-message" id="newPasswordWarning">
                            <div class="warning-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>Password must be at least 6 characters</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="password" 
                               class="form-control" 
                               id="confirmPassword"
                               name="confirmPassword" 
                               placeholder="Confirm New Password"
                               required>
                        <label for="confirmPassword">Confirm New Password</label>
                        <div class="password-warning-message" id="confirmPasswordWarning">
                            <div class="warning-content">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>Passwords do not match</span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-save w-100" id="changePasswordBtn">
                        <i class="fas fa-key me-2"></i>Update Password
                    </button>
                </form>
            </div>
            <% } %>
        </div>
    </div>
</div>

<style>
    .edit-form-card {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .form-floating > .form-control {
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        height: calc(3.5rem + 2px);
        padding: 1rem 1rem;
    }

    .form-floating > .form-control:focus {
        border-color: #FF9800;
        box-shadow: 0 0 0 0.2rem rgba(255, 152, 0, 0.15);
    }

    .form-control.google-auth {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    .google-badge {
        display: inline-flex;
        align-items: center;
        background: #f1f5f9;
        color: #475569;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    .google-badge i {
        color: #4285F4;
        margin-right: 0.5rem;
    }

    .form-floating > label {
        padding: 1rem;
        color: #64748b;
    }

    .btn-back {
        background-color: #f1f5f9;
        color: #475569;
        border: none;
        padding: 0.625rem 1.25rem;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background-color: #e2e8f0;
        color: #1e293b;
        transform: translateY(-2px);
    }

    .btn-save {
        background-color: #FF9800;
        color: white;
        border: none;
        padding: 1rem;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .btn-save:hover {
        background-color: #F57C00;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 152, 0, 0.2);
    }

    .text-muted {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        margin-left: 0.5rem;
        display: block;
    }

    h2, h3 {
        color: #1e293b;
    }

    @media (max-width: 768px) {
        .edit-form-card {
            padding: 1.5rem;
        }

        .d-flex {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start !important;
        }

        .btn-back {
            width: 100%;
        }
    }

    .warning-message, .email-warning-message, .phone-warning-message, .password-warning-message {
        display: none;
        background-color: #FFF3E0;
        border-left: 4px solid #FF9800;
        padding: 0.75rem 1rem;
        margin-top: 0.5rem;
        border-radius: 4px;
        animation: slideIn 0.3s ease-out;
    }

    .warning-content {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #E65100;
        font-size: 0.875rem;
    }

    .warning-content i {
        font-size: 1rem;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-control.warning {
        border-color: #FF9800;
    }

    .form-control.warning:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 152, 0, 0.25);
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('editProfileForm');
    const emailInput = document.getElementById('emailInput');
    const phoneInput = document.getElementById('phoneInput');
    const emailWarning = document.getElementById('emailWarning');
    const phoneWarning = document.getElementById('phoneWarning');
    const submitBtn = document.getElementById('submitBtn');

    let isEmailValid = true;
    let isPhoneValid = true;

    // Email validation
    emailInput.addEventListener('input', function() {
        const email = this.value.trim();
        const currentEmail = '<%= user.email %>';

        if (email === currentEmail) {
            emailWarning.style.display = 'none';
            this.classList.remove('warning');
            isEmailValid = true;
            return;
        }

        // Basic email format validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            emailWarning.querySelector('span').textContent = 'Please enter a valid email address';
            emailWarning.style.display = 'block';
            this.classList.add('warning');
            isEmailValid = false;
            return;
        }

        // Check if email exists
        fetch(`/users/check-email?email=${encodeURIComponent(email)}`)
            .then(response => response.json())
            .then(data => {
                if (data.exists) {
                    emailWarning.querySelector('span').textContent = 'This email is already registered';
                    emailWarning.style.display = 'block';
                    this.classList.add('warning');
                    isEmailValid = false;
                } else {
                    emailWarning.style.display = 'none';
                    this.classList.remove('warning');
                    isEmailValid = true;
                }
                updateSubmitButton();
            });
    });

    // Phone validation
    phoneInput.addEventListener('input', function() {
        this.value = this.value.replace(/\D/g, '');
        
        if (this.value.length !== 10) {
            phoneWarning.style.display = 'block';
            this.classList.add('warning');
            isPhoneValid = false;
        } else {
            phoneWarning.style.display = 'none';
            this.classList.remove('warning');
            isPhoneValid = true;
        }
        updateSubmitButton();
    });

    function updateSubmitButton() {
        submitBtn.disabled = !(isEmailValid && isPhoneValid);
    }

    // Form submission
    form.addEventListener('submit', function(e) {
        if (!isEmailValid || !isPhoneValid) {
            e.preventDefault();
            return false;
        }
    });

    // Password change form validation
    const passwordForm = document.getElementById('changePasswordForm');
    if (passwordForm) {
        const currentPassword = document.getElementById('currentPassword');
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');
        const currentPasswordWarning = document.getElementById('currentPasswordWarning');
        const newPasswordWarning = document.getElementById('newPasswordWarning');
        const confirmPasswordWarning = document.getElementById('confirmPasswordWarning');
        const changePasswordBtn = document.getElementById('changePasswordBtn');

        let isCurrentPasswordValid = false;
        let isNewPasswordValid = false;
        let isConfirmPasswordValid = false;

        // Current password validation
        currentPassword.addEventListener('input', function() {
            if (this.value.length < 1) {
                currentPasswordWarning.style.display = 'block';
                this.classList.add('warning');
                isCurrentPasswordValid = false;
            } else {
                currentPasswordWarning.style.display = 'none';
                this.classList.remove('warning');
                isCurrentPasswordValid = true;
            }
            updatePasswordButton();
        });

        // New password validation
        newPassword.addEventListener('input', function() {
            if (this.value.length < 6) {
                newPasswordWarning.style.display = 'block';
                this.classList.add('warning');
                isNewPasswordValid = false;
            } else {
                newPasswordWarning.style.display = 'none';
                this.classList.remove('warning');
                isNewPasswordValid = true;
            }
            
            // Also check confirm password match
            if (confirmPassword.value) {
                if (this.value !== confirmPassword.value) {
                    confirmPasswordWarning.style.display = 'block';
                    confirmPassword.classList.add('warning');
                    isConfirmPasswordValid = false;
                } else {
                    confirmPasswordWarning.style.display = 'none';
                    confirmPassword.classList.remove('warning');
                    isConfirmPasswordValid = true;
                }
            }
            
            updatePasswordButton();
        });

        // Confirm password validation
        confirmPassword.addEventListener('input', function() {
            if (this.value !== newPassword.value) {
                confirmPasswordWarning.style.display = 'block';
                this.classList.add('warning');
                isConfirmPasswordValid = false;
            } else {
                confirmPasswordWarning.style.display = 'none';
                this.classList.remove('warning');
                isConfirmPasswordValid = true;
            }
            updatePasswordButton();
        });

        function updatePasswordButton() {
            changePasswordBtn.disabled = !(isCurrentPasswordValid && isNewPasswordValid && isConfirmPasswordValid);
        }

        // Password form submission with AJAX
        passwordForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!(isCurrentPasswordValid && isNewPasswordValid && isConfirmPasswordValid)) {
                return false;
            }
            
            // Show loading state
            changePasswordBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Updating...';
            changePasswordBtn.disabled = true;
            
            // Prepare form data
            const formData = {
                currentPassword: currentPassword.value,
                newPassword: newPassword.value,
                confirmPassword: confirmPassword.value
            };
            
            // Send AJAX request
            fetch('/users/profile/change-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                // Reset button state
                changePasswordBtn.innerHTML = '<i class="fas fa-key me-2"></i>Update Password';
                changePasswordBtn.disabled = false;
                
                if (data.success) {
                    // Show success message
                    Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        confirmButtonColor: '#FF9800'
                    }).then(() => {
                        // Reset form
                        passwordForm.reset();
                    });
                } else {
                    // Show error message
                    Swal.fire({
                        title: 'Error!',
                        text: data.message,
                        icon: 'error',
                        confirmButtonColor: '#FF9800'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                changePasswordBtn.innerHTML = '<i class="fas fa-key me-2"></i>Update Password';
                changePasswordBtn.disabled = false;
                
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again.',
                    icon: 'error',
                    confirmButtonColor: '#FF9800'
                });
            });
        });
    }
});
</script>

