<!DOCTYPE html>
<html lang="en">
<head>
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
            min-height: 100vh;
            color: #333;
            line-height: 1.6;
        }

        .navbar {
            background: #ffffff;
            padding: 1rem 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 700;
            color: #FF9800 !important;
        }

        .auth-container {
            max-width: 500px;
            margin: 2rem auto;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            color: black;
            padding: 2rem;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #343a40;
            text-align: center;
        }

        .btn-primary {
            background: #FF9800;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #E67E22;
            transform: translateY(-2px);
        }

        .footer {
            text-align: center;
            padding: 1rem;
            background: #ffffff;
            color: #333;
            margin-top: 2rem;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
        }

        .alert {
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .btn-resend {
            display: none; /* Hidden by default */
            background: #6c757d;
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .btn-resend:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

        #statusMessage {
            margin-top: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-beer me-2"></i>Brewtopia
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="auth-container">
            <h2 class="form-title">Verify OTP</h2>
            <!-- <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %> -->
            <form action="/users/profile/verify-email-otp" method="POST">
                <div class="mb-3">
                    <label class="form-label">Enter OTP</label>
                    <input type="text" class="form-control" name="otp" required>
                    <div class="text-center mt-2">
                        <span id="timer" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" name="email" value="<%= email %>">
                <input type="hidden" name="isEmailUpdate" value="<%= isEmailUpdate %>">
                <button type="submit" class="btn btn-primary w-100" id="verifyButton">Verify OTP</button>
            </form>
            <button class="btn btn-resend w-100" id="resendButton" onclick="resendOTP()">
                Resend OTP
            </button>
            <div id="statusMessage"></div>
        </div>
    </div>

    <footer class="footer">
        &copy; 2025 Brewtopia. All rights reserved.
    </footer>

    <script>
        let timeLeft = 60;
        const timerDisplay = document.getElementById('timer');
        const verifyButton = document.getElementById('verifyButton');
        const resendButton = document.getElementById('resendButton');
        const statusMessage = document.getElementById('statusMessage');
        
        function updateTimer() {
            if (timeLeft > 0) {
                timerDisplay.innerHTML = `Time remaining: ${timeLeft} seconds`;
                timeLeft--;
                resendButton.style.display = 'none';
            } else {
                timerDisplay.innerHTML = "OTP expired! Please request a new one";
                verifyButton.disabled = true;
                resendButton.style.display = 'block';
                resendButton.disabled = false;
                clearInterval(countdown);
            }
        }

        async function resendOTP() {
            const email = '<%= email %>';
            resendButton.disabled = true;
            statusMessage.innerHTML = '';
            
            try {
                const response = await fetch('/users/resend-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email })
                });

                const data = await response.json();
                
                if (data.success) {
                    timeLeft = 60;
                    verifyButton.disabled = false;
                    resendButton.style.display = 'none';
                    statusMessage.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
                    
                    if (countdown) {
                        clearInterval(countdown);
                    }
                    countdown = setInterval(updateTimer, 1000);
                    updateTimer();
                } else {
                    if (data.maxAttemptsReached) {
                        resendButton.style.display = 'none';
                        statusMessage.innerHTML = `<div class="alert alert-danger">
                            ${data.message}<br>
                            <a href="/users/signup" class="btn btn-primary mt-2">Register Again</a>
                        </div>`;
                    } else {
                        statusMessage.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
                        resendButton.disabled = false;
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                statusMessage.innerHTML = '<div class="alert alert-danger">Failed to resend OTP. Please try again.</div>';
                resendButton.disabled = false;
            }
        }

        updateTimer();
        let countdown = setInterval(updateTimer, 1000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

