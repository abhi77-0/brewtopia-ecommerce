<%- include('../partials/header') %>

<style>
    .product-card {
        transition: transform 0.2s;
        height: 100%;
        overflow: hidden;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .product-carousel {
        position: relative;
        width: 100%;
        padding-top: 75%; /* 4:3 Aspect Ratio */
        overflow: hidden;
    }
    .carousel {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .carousel-inner {
        height: 100%;
    }
    .carousel-item {
        height: 100%;
    }
    .carousel-item img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
    .variant-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
        border-bottom: 1px solid #eee;
    }
    .variant-item:last-child {
        border-bottom: none;
    }
    .price {
        font-weight: bold;
        color: #2c3e50;
        font-size: 1.1rem;
    }
    .carousel-control-prev,
    .carousel-control-next {
        width: 10%;
        background: rgba(0, 0, 0, 0.2);
        opacity: 0;
        transition: opacity 0.3s;
    }
    .product-card:hover .carousel-control-prev,
    .product-card:hover .carousel-control-next {
        opacity: 1;
    }
    .carousel-control-prev:hover,
    .carousel-control-next:hover {
        background: rgba(0, 0, 0, 0.3);
    }
    .card-body {
        padding: 1.5rem;
        background: #fff;
    }
    .card-title {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2c3e50;
    }
    .card-text {
        color: #6c757d;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
    }
    .btn-primary {
        padding: 0.6rem 1.5rem;
        font-weight: 500;
    }
    .variants {
        background: #f8f9fa;
        padding: 0.75rem;
        border-radius: 0.5rem;
        margin: 1rem 0;
    }
</style>

<div class="container mt-4">
    <!-- Category Filter -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Filter by Category</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/shop/products" class="btn btn-outline-primary <%= !selectedCategory ? 'active' : '' %>">
                            All Products
                        </a>
                        <% if (categories && categories.length > 0) { %>
                            <% categories.forEach(function(category) { %>
                                <a href="/shop/products?category=<%= category._id %>" 
                                   class="btn btn-outline-primary <%= selectedCategory === category._id.toString() ? 'active' : '' %>">
                                    <%= category.name %>
                                </a>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% if (products && products.length > 0) { %>
            <% products.forEach(function(product) { %>
                <div class="col">
                    <div class="card h-100 product-card shadow-sm">
                        <!-- Product Images -->
                        <div class="product-carousel">
                            <div id="carousel-<%= product._id %>" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <% if (product.images && product.images.image1) { %>
                                        <div class="carousel-item active">
                                            <img src="<%= product.images.image1 %>" class="d-block" alt="<%= product.name %>">
                                        </div>
                                    <% } %>
                                    <% if (product.images && product.images.image2) { %>
                                        <div class="carousel-item">
                                            <img src="<%= product.images.image2 %>" class="d-block" alt="<%= product.name %>">
                                        </div>
                                    <% } %>
                                    <% if (product.images && product.images.image3) { %>
                                        <div class="carousel-item">
                                            <img src="<%= product.images.image3 %>" class="d-block" alt="<%= product.name %>">
                                        </div>
                                    <% } %>
                                </div>
                                <% if (product.images && Object.keys(product.images).length > 1) { %>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= product._id %>" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= product._id %>" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                <% } %>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %></h5>
                            <% if (product.category) { %>
                                <p class="card-text text-muted mb-2"><small><%= product.category.name %></small></p>
                            <% } %>
                            <p class="card-text flex-grow-1"><%= product.description %></p>
                            
                            <!-- Variants -->
                            <div class="variants mb-3">
                                <% if (product.variants && product.variants['500ml']) { %>
                                    <div class="variant-item">
                                        <span class="badge bg-info">500ml</span>
                                        <span class="price">₹<%= product.variants['500ml'].price %></span>
                                    </div>
                                <% } %>
                                <% if (product.variants && product.variants['650ml']) { %>
                                    <div class="variant-item mt-1">
                                        <span class="badge bg-primary">650ml</span>
                                        <span class="price">₹<%= product.variants['650ml'].price %></span>
                                    </div>
                                <% } %>
                            </div>

                            <a href="/shop/products/<%= product._id %>" class="btn btn-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <h3 class="text-muted">No products found</h3>
                <p class="text-muted">Check back later for new products!</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>