    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Function to toggle product visibility with confirmation
        function confirmToggleVisibility(productId, productName, isCurrentlyVisible) {
            const action = isCurrentlyVisible ? 'hide' : 'show';
            const icon = isCurrentlyVisible ? 'eye-slash' : 'eye';
            const color = isCurrentlyVisible ? 'warning' : 'success';
            
            Swal.fire({
                title: `${isCurrentlyVisible ? 'Hide' : 'Show'} Product?`,
                html: `Are you sure you want to ${action} "<strong>${productName}</strong>"?`,
                icon: color,
                showCancelButton: true,
                confirmButtonColor: isCurrentlyVisible ? '#ffc107' : '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: `Yes, ${action} it!`
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading state
                    Swal.fire({
                        title: 'Processing...',
                        text: `Please wait while we ${action} the product.`,
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        willOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Send toggle request
                    fetch(`/admin/products/toggle-visibility/${productId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: `${isCurrentlyVisible ? 'Hidden' : 'Shown'}!`,
                                text: data.message || `Product "${productName}" is now ${isCurrentlyVisible ? 'hidden' : 'visible'}.`,
                                icon: 'success',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                // Update the button without reloading
                                const button = document.querySelector(`tr[data-product-id="${productId}"] button[onclick*="confirmToggleVisibility"]`);
                                const statusBadge = document.querySelector(`tr[data-product-id="${productId}"] td[data-label="Status"] .badge`);
                                
                                if (button) {
                                    button.classList.remove(isCurrentlyVisible ? 'btn-danger' : 'btn-success');
                                    button.classList.add(isCurrentlyVisible ? 'btn-success' : 'btn-danger');
                                    
                                    const iconElement = button.querySelector('i');
                                    if (iconElement) {
                                        iconElement.classList.remove(isCurrentlyVisible ? 'fa-eye-slash' : 'fa-eye');
                                        iconElement.classList.add(isCurrentlyVisible ? 'fa-eye' : 'fa-eye-slash');
                                    }
                                    
                                    const textSpan = button.querySelector('span');
                                    if (textSpan) {
                                        textSpan.textContent = isCurrentlyVisible ? 'Show' : 'Hide';
                                    }
                                    
                                    // Update onclick attribute
                                    button.setAttribute('onclick', `confirmToggleVisibility('${productId}', '${productName}', ${!isCurrentlyVisible})`);
                                }
                                
                                if (statusBadge) {
                                    statusBadge.classList.remove(isCurrentlyVisible ? 'bg-success' : 'bg-warning');
                                    statusBadge.classList.add(isCurrentlyVisible ? 'bg-warning' : 'bg-success');
                                    statusBadge.classList.remove(isCurrentlyVisible ? '' : 'text-dark');
                                    statusBadge.classList.add(isCurrentlyVisible ? 'text-dark' : '');
                                    statusBadge.textContent = isCurrentlyVisible ? 'Inactive' : 'Active';
                                }
                            });
                        } else {
                            throw new Error(data.error || `Failed to ${action} product`);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error!',
                            text: error.message || `Failed to ${action} product.`,
                            icon: 'error'
                        });
                    });
                }
            });
        }
        
        // Function to delete product with confirmation
        function deleteProduct(productId, productName) {
            Swal.fire({
                title: 'Delete Product?',
                html: `Are you sure you want to delete "<strong>${productName}</strong>"?<br>
                       This action cannot be undone.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading state
                    Swal.fire({
                        title: 'Deleting...',
                        text: 'Please wait while we delete the product.',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        willOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Send delete request
                    fetch(`/admin/products/delete/${productId}`, {
                        method: 'DELETE',
                        headers: {
                            'Accept': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: data.message || `Product "${productName}" has been deleted.`,
                                icon: 'success',
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => {
                                // Remove the product row from the table
                                const productRow = document.querySelector(`tr[data-product-id="${productId}"]`);
                                if (productRow) {
                                    productRow.remove();
                                } else {
                                    // If we can't find the row, just reload the page
                                    window.location.reload();
                                }
                            });
                        } else {
                            throw new Error(data.error || 'Failed to delete product');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error!',
                            text: error.message || 'Failed to delete product.',
                            icon: 'error'
                        });
                    });
                }
            });
        }

        // Image preview functionality
        document.querySelectorAll('.image-input').forEach((input, index) => {
            const previewId = `preview${index + 1}`;
            const previewDiv = document.getElementById(previewId);

            input.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Validate file type
                    if (!file.type.startsWith('image/')) {
                        Swal.fire({
                            title: 'Error!',
                            text: 'Please select an image file',
                            icon: 'error'
                        });
                        return;
                    }

                    // Show loading spinner
                    previewDiv.innerHTML = `
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    `;

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = new Image();
                        img.onload = function() {
                            // Update preview
                            previewDiv.style.backgroundImage = `url('${e.target.result}')`;
                            previewDiv.classList.add('has-image');
                            previewDiv.innerHTML = ''; // Remove loading spinner
                        };
                        img.onerror = function() {
                            previewDiv.innerHTML = '<i class="fas fa-image"></i>';
                            previewDiv.classList.remove('has-image');
                            Swal.fire({
                                title: 'Error!',
                                text: 'Failed to load image preview',
                                icon: 'error'
                            });
                        };
                        img.src = e.target.result;
                    };
                    reader.onerror = function() {
                        previewDiv.innerHTML = '<i class="fas fa-image"></i>';
                        previewDiv.classList.remove('has-image');
                        Swal.fire({
                            title: 'Error!',
                            text: 'Failed to read image file',
                            icon: 'error'
                        });
                    };
                    reader.readAsDataURL(file);
                } else {
                    // Reset preview if no file selected
                    previewDiv.style.backgroundImage = '';
                    previewDiv.classList.remove('has-image');
                    previewDiv.innerHTML = '<i class="fas fa-image"></i>';
                }
            });

            // Click preview to trigger file input
            previewDiv.addEventListener('click', () => {
                if (!previewDiv.querySelector('.spinner-border')) {
                    input.click();
                }
            });
        });

        // Add the form validation after the existing code
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation function
            function validateForm(formElement) {
                let isValid = true;
                const formFields = formElement.querySelectorAll('[data-validation]');
                
                // Reset all fields to valid state
                formFields.forEach(field => {
                    field.classList.remove('is-invalid');
                    const feedbackElement = field.nextElementSibling;
                    if (feedbackElement && feedbackElement.classList.contains('invalid-feedback')) {
                        feedbackElement.textContent = '';
                    }
                });
                
                // Validate each field
                formFields.forEach(field => {
                    const validationRules = field.dataset.validation ? field.dataset.validation.split(' ') : [];
                    
                    // Check required fields
                    if (validationRules.includes('required') && !field.value.trim()) {
                        isValid = false;
                        field.classList.add('is-invalid');
                        const feedbackElement = field.nextElementSibling;
                        if (feedbackElement && feedbackElement.classList.contains('invalid-feedback')) {
                            feedbackElement.textContent = 'This field is required';
                        }
                    }
                    
                    // Check minimum value for number inputs
                    if (field.type === 'number' && field.value && field.dataset.validationMin !== undefined) {
                        const minValue = parseFloat(field.dataset.validationMin);
                        if (parseFloat(field.value) < minValue) {
                            isValid = false;
                            field.classList.add('is-invalid');
                            const feedbackElement = field.nextElementSibling;
                            if (feedbackElement && feedbackElement.classList.contains('invalid-feedback')) {
                                feedbackElement.textContent = `Value must be at least ${minValue}`;
                            }
                        }
                    }
                });
                
                return isValid;
            }
            
            // Add Product form submission
            document.getElementById('addProductForm').addEventListener('submit', function(e) {
                // Prevent default form submission first
                e.preventDefault();
                
                // Perform validation
                const isValid = validateForm(this);
                
                // If validation fails, just focus on the first invalid field without showing a SweetAlert
                if (!isValid) {
                    // Find the first invalid field
                    const firstInvalid = this.querySelector('.is-invalid');
                    if (firstInvalid) {
                        // Scroll into view and focus
                        firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstInvalid.focus();
                    }
                    return false;
                }
                
                // If validation passes, continue with the AJAX submit
                // Show loading state
                const submitBtn = document.querySelector('#addProductForm button[type="submit"]');
                const originalBtnText = submitBtn.innerHTML;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';
                
                // Rest of the AJAX submission code
                // Create FormData
                const formData = new FormData(this);
                
                // Format variants data
                const variants = {
                    '500ml': {
                        price: parseFloat(formData.get('price500ml')) || 0,
                        stock: parseInt(formData.get('stock500ml')) || 0,
                        mrp: parseFloat(formData.get('price500ml')) || 0
                    },
                    '650ml': {
                        price: parseFloat(formData.get('price650ml')) || 0,
                        stock: parseInt(formData.get('stock650ml')) || 0,
                        mrp: parseFloat(formData.get('price650ml')) || 0
                    }
                };
                
                // Remove individual variant fields and add formatted variants
                formData.delete('price500ml');
                formData.delete('stock500ml');
                formData.delete('price650ml');
                formData.delete('stock650ml');
                formData.append('variants', JSON.stringify(variants));
                
                // Submit via AJAX
                fetch('/admin/products/add', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Close modal
                        bootstrap.Modal.getInstance(document.getElementById('addProductModal')).hide();
                        
                        // Show success message only for successful submission
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Product created successfully'
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        // For server-side validation errors, show as form errors instead of SweetAlert
                        if (data.error) {
                            // Show the error as text below the form
                            const errorMessageElement = document.createElement('div');
                            errorMessageElement.className = 'alert alert-danger mt-3';
                            errorMessageElement.textContent = data.error;
                            
                            // Insert at the top of the form
                            this.insertAdjacentElement('afterbegin', errorMessageElement);
                            
                            // Scroll to the error message
                            errorMessageElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    
                    // Show error message as text in the form instead of SweetAlert
                    const errorMessageElement = document.createElement('div');
                    errorMessageElement.className = 'alert alert-danger mt-3';
                    errorMessageElement.textContent = 'An error occurred while creating the product. Please try again.';
                    
                    // Insert at the top of the form
                    this.insertAdjacentElement('afterbegin', errorMessageElement);
                })
                .finally(() => {
                    // Reset button state
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalBtnText;
                });
            });
            
            // Edit Product form submission
            document.getElementById('editProductForm').addEventListener('submit', function(e) {
                // Prevent default form submission
                e.preventDefault();
                
                // Perform validation
                const isValid = validateForm(this);
                
                // If validation fails, just focus on the first invalid field without SweetAlert
                if (!isValid) {
                    // Find the first invalid field
                    const firstInvalid = this.querySelector('.is-invalid');
                    if (firstInvalid) {
                        // Scroll into view and focus
                        firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstInvalid.focus();
                    }
                    return false;
                }
                
                // If validation passes, continue with the AJAX submit
                // Show loading state
                const submitBtn = document.querySelector('#editProductForm button[type="submit"]');
                const originalBtnText = submitBtn.innerHTML;
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Updating...';
                
                // Rest of the form submission code
                // Create FormData
                const formData = new FormData(this);
                
                // Add keep image flags
                formData.append('keepImage1', document.getElementById('keepImage1').checked);
                formData.append('keepImage2', document.getElementById('keepImage2').checked);
                formData.append('keepImage3', document.getElementById('keepImage3').checked);
                
                // Format variants data
                const variants = {
                    '500ml': {
                        price: parseFloat(formData.get('price500ml')) || 0,
                        stock: parseInt(formData.get('stock500ml')) || 0,
                        mrp: parseFloat(formData.get('price500ml')) || 0
                    },
                    '650ml': {
                        price: parseFloat(formData.get('price650ml')) || 0,
                        stock: parseInt(formData.get('stock650ml')) || 0,
                        mrp: parseFloat(formData.get('price650ml')) || 0
                    }
                };
                
                // Remove individual variant fields and add formatted variants
                formData.delete('price500ml');
                formData.delete('stock500ml');
                formData.delete('price650ml');
                formData.delete('stock650ml');
                formData.append('variants', JSON.stringify(variants));
                
                // Submit via AJAX
                fetch('/admin/products/update', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Close modal
                        bootstrap.Modal.getInstance(document.getElementById('editProductModal')).hide();
                        
                        // Show success message only for successful update
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Product updated successfully'
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        // For server-side validation errors, show as form errors instead of SweetAlert
                        if (data.error) {
                            // Show the error as text below the form
                            const errorMessageElement = document.createElement('div');
                            errorMessageElement.className = 'alert alert-danger mt-3';
                            errorMessageElement.textContent = data.error;
                            
                            // Insert at the top of the form
                            this.insertAdjacentElement('afterbegin', errorMessageElement);
                            
                            // Scroll to the error message
                            errorMessageElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    
                    // Show error message as text in the form instead of SweetAlert
                    const errorMessageElement = document.createElement('div');
                    errorMessageElement.className = 'alert alert-danger mt-3';
                    errorMessageElement.textContent = 'An error occurred while updating the product. Please try again.';
                    
                    // Insert at the top of the form
                    this.insertAdjacentElement('afterbegin', errorMessageElement);
                })
                .finally(() => {
                    // Reset button state
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalBtnText;
                });
            });
        });
    </script>
