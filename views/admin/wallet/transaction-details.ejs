<%- include('./partials/sidebar') %>
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Transaction Details</h1>
        <a href="/admin/wallet/transactions" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Transactions
        </a>
    </div>

    <div class="row">
        <!-- Transaction Information -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Transaction Information</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th width="40%">Transaction ID</th>
                                <td><%= transaction.transactionId %></td>
                            </tr>
                            <tr>
                                <th>Date & Time</th>
                                <td><%= new Date(transaction.createdAt).toLocaleString() %></td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>
                                    <span class="badge badge-<%= 
                                        transaction.type === 'refund' ? 'success' : 
                                        transaction.type === 'cashback' ? 'info' : 
                                        transaction.type === 'purchase' ? 'danger' : 
                                        'warning' 
                                    %>">
                                        <%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1) %>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Amount</th>
                                <td class="<%= transaction.type === 'purchase' ? 'text-danger' : 'text-success' %> font-weight-bold">
                                    <%= transaction.type === 'purchase' ? '-' : '+' %>₹<%= transaction.amount.toFixed(2) %>
                                </td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>
                                    <span class="badge badge-<%= 
                                        transaction.status === 'completed' ? 'success' : 
                                        transaction.status === 'pending' ? 'warning' : 
                                        'danger' 
                                    %>">
                                        <%= transaction.status.charAt(0).toUpperCase() + transaction.status.slice(1) %>
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td><%= transaction.description %></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Information -->
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">User Information</h6>
                </div>
                <div class="card-body">
                    <% if (transaction.user) { %>
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th width="40%">Name</th>
                                    <td><%= transaction.user.name %></td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td><%= transaction.user.email %></td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td><%= transaction.user.phone || 'N/A' %></td>
                                </tr>
                                <tr>
                                    <th>Current Wallet Balance</th>
                                    <td class="font-weight-bold">₹<%= transaction.user.walletBalance.toFixed(2) %></td>
                                </tr>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/admin/users/<%= transaction.user._id %>" class="btn btn-primary">
                                <i class="fas fa-user"></i> View User Profile
                            </a>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-user-slash fa-3x text-gray-300 mb-3"></i>
                            <p class="mb-0">User information not available</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Order Information (if applicable) -->
    <% if (transaction.order) { %>
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Related Order Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th width="20%">Order Number</th>
                                    <td><%= transaction.order.orderNumber %></td>
                                </tr>
                                <tr>
                                    <th>Order Total</th>
                                    <td>₹<%= transaction.order.totalAmount.toFixed(2) %></td>
                                </tr>
                                <tr>
                                    <th>Payment Method</th>
                                    <td><%= transaction.order.paymentMethod %></td>
                                </tr>
                                <tr>
                                    <th>Order Status</th>
                                    <td>
                                        <span class="badge badge-<%= 
                                            transaction.order.status === 'delivered' ? 'success' : 
                                            transaction.order.status === 'cancelled' ? 'danger' : 
                                            transaction.order.status === 'returned' ? 'warning' : 
                                            'info' 
                                        %>">
                                            <%= transaction.order.status.charAt(0).toUpperCase() + transaction.order.status.slice(1) %>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Products</th>
                                    <td>
                                        <ul class="list-group">
                                            <% transaction.order.items.forEach(item => { %>
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <%= item.product ? item.product.name : 'Product not available' %>
                                                        <small class="d-block text-muted">
                                                            Variant: <%= item.variant %>, Quantity: <%= item.quantity %>
                                                        </small>
                                                    </div>
                                                    <span>₹<%= item.price.toFixed(2) %></span>
                                                </li>
                                            <% }); %>
                                        </ul>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="/admin/orders/<%= transaction.order._id %>" class="btn btn-primary">
                                <i class="fas fa-shopping-cart"></i> View Order Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('../../partials/admin-footer') %> 