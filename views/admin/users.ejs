<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Users Management</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Profile</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Join Date</th>
                                        <th>Orders</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Sample user row -->
                                    <tr>
                                        <td><img src="/images/default-avatar.png" alt="User" class="rounded-circle" width="40"></td>
                                        <td>John Doe</td>
                                        <td>john@example.com</td>
                                        <td>2024-02-20</td>
                                        <td>5</td>
                                        <td><span class="badge bg-success">Active</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-info">View Details</button>
                                            <button class="btn btn-sm btn-warning">Block</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="user-info">
                    <div class="text-center mb-4">
                        <img src="/images/default-avatar.png" alt="User" class="rounded-circle" width="100">
                        <h5 class="mt-3">John Doe</h5>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <p><strong>Email:</strong> john@example.com</p>
                            <p><strong>Join Date:</strong> 2024-02-20</p>
                            <p><strong>Total Orders:</strong> 5</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Status:</strong> Active</p>
                            <p><strong>Last Login:</strong> 2024-02-25</p>
                            <p><strong>Total Spent:</strong> $250.00</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 